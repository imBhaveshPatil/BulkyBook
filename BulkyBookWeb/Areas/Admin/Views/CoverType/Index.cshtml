@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3"
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">CoverType List</h2>
        </div>
        <div class="col-6 align-text-top">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> &nbsp; Create New CoverType</a>
        </div>
    </div>
    <br/>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                CoverType
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="=50%">
                    @obj.Name
                </td>
                <td>
                    <div class="w-25 btn-group" role="group">
                                <a asp-controller="CoverType" asp-action="Edit" asp-route-id = "@obj.Id"
                            class="btn btn-primary"> <i class="bi bi-pencil"></i> </a>
                                <a asp-controller="CoverType" asp-action="Delete" asp-route-id = "@obj.Id"
                             class="btn btn-danger"> <i class="bi bi-trash3"></i> </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
    
</table>
</div>
